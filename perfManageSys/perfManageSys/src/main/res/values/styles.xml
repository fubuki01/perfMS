        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/padding_textview_left_right</item>
        <item name="android:paddingTop">@dimen/padding_textview_top_bottom</item>
        <item name="android:paddingBottom">@dimen/padding_textview_top_bottom</item>
    </style>
    <!-- 客户详细信息，关联人信息表头 -->
    <style name="CustRelationTitle" parent="CustRelation">
        <item name="android:textColor">@color/font_black_2</item>
        <item name="android:textSize">@dimen/font_content_th</item>
    </style>
    <!-- 客户详细信息，关联人信息内容 -->
