        <item name="android:paddingRight">20dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="PerfTvChooseContent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/font_them</item>
        <item name="android:textSize">@dimen/font_content_fir</item>
    </style>

    <style name="PerfTableTv">
        <item name="android:layout_height">@dimen/layout_choose_height</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/font_black_2</item>
        <item name="android:textSize">@dimen/font_common_small</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_common_layout</item>
    </style>

    <style name="PerfTableTv2" parent="PerfTableTv">
        <item name="android:layout_weight">2</item>
    </style>

    <style name="PerfTableTv1.2" parent="PerfTableTv">
        <item name="android:layout_weight">1.2</item>
