<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 根布局 -->
    <style name="Root">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- Activity根布局 -->
    <style name="RootLayout" parent="Root">
        <item name="android:background">@color/bg_root</item>
    </style>

    <!-- Fragment根布局 -->
    <style name="RootFragment" parent="Root">
        <item name="android:background">@color/bg_root</item>
    </style>

    <!-- 主页下方TextView -->
    <style name="HomeTvCommon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/font_black_2</item>
        <item name="android:textSize">@dimen/font_home_tv</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- 主界面下方导航栏 -->
    <style name="HomeTabLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 主界面下方导航栏图片 -->
    <style name="HomeTabImageView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
    </style>


    <!-- 拜访客户上方导航栏 -->
    <style name="VisitTabLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 拜访客户导航栏图片 -->
    <style name="VisitTabImageView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
    </style>


    <!-- 拜访客户TextView -->
