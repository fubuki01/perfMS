        <item name="android:paddingRight">@dimen/padding_textview_left_right</item>
        <item name="android:textColor">@color/font_black_3</item>
        <item name="android:textSize">@dimen/font_content_fir</item>
    </style>

    <!-- 客户详细信息，分类标题后边线条 -->
