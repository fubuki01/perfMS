    <style name="PerfTableTv1" parent="PerfTableTv">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="PerfTableTv3" parent="PerfTableTv">
        <item name="android:layout_weight">3</item>
    </style>

    <!-- 绩效工资模块首页 -->


    <!-- 水平线条 -->
    <style name="CommonHorLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:background">@color/bg_line</item>
        <item name="android:layout_gravity">center</item>
    </style>

