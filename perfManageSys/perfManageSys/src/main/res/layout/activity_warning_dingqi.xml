<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RootFragment"
    android:orientation="vertical" >

    <include layout="@layout/layout_common_back_title" />

    <LinearLayout
        style="@style/CommonLayout"
        android:background="@color/bg_white"
        android:orientation="horizontal" >

        <View style="@style/CommonVerLine" />

        <TextView
            style="@style/PerfTableTv1"
            android:text="业务机构" />

        <View style="@style/CommonVerLine" />

        <TextView
            style="@style/PerfTableTv1"
            android:text="客户名称" />

        <View style="@style/CommonVerLine" />

        <TextView
            style="@style/PerfTableTv1"
            android:text="开户日期" />

        <View style="@style/CommonVerLine" />

        <TextView
            style="@style/PerfTableTv1"
            android:text="到期日期" />

        <View style="@style/CommonVerLine" />

        <TextView
            style="@style/PerfTableTv1"
            android:text="利率(%)" />

        <View style="@style/CommonVerLine" />
    </LinearLayout>

    <View style="@style/CommonHorLine" />

    <LinearLayout
        style="@style/CommonLayout"
        android:background="@color/bg_white"
        android:orientation="horizontal" >

        <View style="@style/CommonVerLine" />

        <TextView
            android:id="@+id/warning_dingqi_tv_0"
            style="@style/PerfTableTv1"
            android:text="营业部" />

        <View style="@style/CommonVerLine" />

        <TextView
            android:id="@+id/warning_dingqi_tv_1"
            style="@style/PerfTableTv1"
            android:text="张三" />

        <View style="@style/CommonVerLine" />

        <TextView
            android:id="@+id/warning_dingqi_tv_2"
            style="@style/PerfTableTv1"
            android:text="2017-05-10" />

        <View style="@style/CommonVerLine" />

        <TextView
            android:id="@+id/warning_dingqi_tv_3"
            style="@style/PerfTableTv1"
            android:text="2017-09-09" />

        <View style="@style/CommonVerLine" />

        <TextView
            android:id="@+id/warning_dingqi_tv_4"
            style="@style/PerfTableTv1"
            android:text="3.2" />

        <View style="@style/CommonVerLine" />
    </LinearLayout>

    <View style="@style/CommonHorLine" />

    <LinearLayout
        style="@style/CommonLayout"
        android:background="@color/bg_white"
        android:orientation="horizontal" >

        <View style="@style/CommonVerLine" />

        <TextView
            style="@style/PerfTableTv1"
            android:text="存期" />

        <View style="@style/CommonVerLine" />

        <TextView
            style="@style/PerfTableTv1"
            android:text="余额" />

        <View style="@style/CommonVerLine" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/bg_root" >
        </LinearLayout>
    </LinearLayout>

    <View style="@style/CommonHorLine" />

    <LinearLayout
        style="@style/CommonLayout"
        android:background="@color/bg_white"
        android:orientation="horizontal" >

        <View style="@style/CommonVerLine" />

        <TextView
            android:id="@+id/warning_dingqi_tv_5"
            style="@style/PerfTableTv1"
            android:text="365" />

        <View style="@style/CommonVerLine" />

        <TextView
            android:id="@+id/warning_dingqi_tv_6"
            style="@style/PerfTableTv1"
            android:text="10000" />

        <View style="@style/CommonVerLine" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/bg_root" >
        </LinearLayout>
    </LinearLayout>

    <View style="@style/CommonHorLine" />

</LinearLayout>