<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customer_pruduct_etc_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_product_top"
    android:layout_marginBottom="@dimen/margin_product_bottom"
    android:orientation="vertical"
    android:visibility="gone" >

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <View
            android:id="@+id/line"
            style="@style/CustProductLine"
            android:layout_alignParentLeft="true" />

        <TextView
            style="@style/CustProductTitle"
            android:layout_toRightOf="@id/line"
            android:text="ETC" />

        <TextView
            android:id="@+id/customer_pruduct_etc_more"
            style="@style/ProductMoreTV" />
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/customer_product_cunkuan_ll_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >
        
        <include layout="@layout/item_customer_product_etc_home"/>
        
    </LinearLayout>

</LinearLayout>