
<!-- ETC产品信息 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal" >

            <TextView
                style="@style/CustTvItemTitle"
                android:text="开户机构：" />

            <TextView
                android:id="@+id/customer_product_etc_jigou"
                style="@style/CustTvItemContent"
                android:text="营业部" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:orientation="horizontal" >

            <TextView
                style="@style/CustTvItemTitle"
                android:text="绑定日期：" />

            <TextView
                android:id="@+id/customer_product_etc_kaihu_riqi"
                style="@style/CustTvItemContent"
                android:text="2017-05-20" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal" >

            <TextView
                style="@style/CustTvItemTitle"
                android:text="营销类型：" />

            <TextView
                android:id="@+id/customer_product_etc_leixing"
                style="@style/CustTvItemContent"
                android:text="主动营销" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:orientation="horizontal" >

            <TextView
                style="@style/CustTvItemTitle"
                android:text="垫付金额：" />

            <TextView
                android:id="@+id/customer_product_etc_dianfu"
                style="@style/CustTvItemContent"
                android:text="0.00" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal" >

            <TextView
                style="@style/CustTvItemTitle"
                android:text="拓展人：" />

            <TextView
                android:id="@+id/customer_product_etc_tuozhanren"
                style="@style/CustTvItemContent"
                android:text="张三" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:orientation="horizontal" >

            <TextView
                style="@style/CustTvItemTitle"
                android:text="拓展比例(%)：" />

            <TextView
                android:id="@+id/customer_product_etc_bili"
                style="@style/CustTvItemContent"
                android:text="100" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal" >

            <TextView
                style="@style/CustTvItemTitle"
                android:text="安装人：" />

            <TextView
                android:id="@+id/customer_product_etc_anzhuangren"
                style="@style/CustTvItemContent"
                android:text="张三" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:orientation="horizontal" >

            <TextView
                style="@style/CustTvItemTitle"
                android:text="安装比例：" />

            <TextView
                android:id="@+id/customer_product_etc_anzhuang_bili"
                style="@style/CustTvItemContent"
                android:text="100" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/CustTvItemTitle"
            android:text="湘卡通卡号：" />

        <TextView
            android:id="@+id/customer_product_etc_tiepian_kahao"
            style="@style/CustTvItemContent"
            android:text="235367833232" />
    </LinearLayout>

</LinearLayout>