<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_root"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp" >

        <LinearLayout
            style="@style/RootFragment"
            android:background="@drawable/selector_home_tips"
            android:orientation="vertical"
            android:padding="@dimen/padding_listview_item_hor" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/CustTvItemTitle"
                        android:text="机构名称：" />

                    <TextView
                        android:id="@+id/item_performance_ck_hs_jgmc"
                        style="@style/CustTvItemContent"
                        android:text="营业部" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.2"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/CustTvItemTitle"
                        android:text="客户名称：" />

                    <TextView
                        android:id="@+id/item_performance_ck_hs_khmc"
                        style="@style/CustTvItemContent"
                        android:text="430" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/CustTvItemTitle"
                        android:text="最早开户日期：" />

                    <TextView
                        android:id="@+id/item_performance_ck_hs_zzkhrq"
                        style="@style/CustTvItemContent"
                        android:text="2017-05-11" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.2"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/CustTvItemTitle"
                        android:text="类型：" />

                    <TextView
                        android:id="@+id/item_performance_ck_hs_lx"
                        style="@style/CustTvItemContent"
                        android:text="自然增长" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="horizontal" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="horizontal" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/CustTvItemTitle"
                        android:text="管户结束日期：" />

                    <TextView
                        android:id="@+id/item_performance_ck_hs_ghjsrq"
                        style="@style/CustTvItemContent"
                        android:text="2017-07-01" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.2"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/CustTvItemTitle"
                        android:text="单价：" />

                    <TextView
                        android:id="@+id/item_performance_ck_hs_dj"
                        style="@style/CustTvItemContent"
                        android:text="20" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/CustTvItemTitle"
                        android:text="工资：" />

                    <TextView
                        android:id="@+id/item_performance_ck_hs_gz"
                        style="@style/CustTvItemContent"
                        android:text="10000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.2"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/CustTvItemTitle"
                        android:text="累计工资：" />

                    <TextView
                        android:id="@+id/item_performance_ck_hs_ljgz"
                        style="@style/CustTvItemContent"
                        android:text="10" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/common_item_lable" />

</FrameLayout>