<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_root"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp" >

    <LinearLayout
        style="@style/RootFragment"
        android:background="@color/bg_white"
        android:orientation="vertical"
        android:padding="@dimen/padding_listview_item_hor" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="年度：" />

                <TextView
                    android:id="@+id/item_warning_lnshl_niandu"
                    style="@style/CustTvItemContent"
                    android:text="2017" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="回收率：" />

                <TextView
                    android:id="@+id/item_warning_lnshl_huishoulv"
                    style="@style/CustTvItemContent"
                    android:text="98" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="到期金额：" />

                <TextView
                    android:id="@+id/item_warning_lnshl_daoqi"
                    style="@style/CustTvItemContent"
                    android:text="1231" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="期末金额：" />

                <TextView
                    android:id="@+id/item_warning_lnshl_qimo"
                    style="@style/CustTvItemContent"
                    android:text="2000" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>