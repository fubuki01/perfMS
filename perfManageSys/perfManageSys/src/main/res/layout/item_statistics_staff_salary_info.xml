<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bg_root"
    android:paddingLeft="@dimen/listview_item_dimen"
    android:paddingRight="@dimen/listview_item_dimen"
    android:paddingTop="@dimen/listview_item_dimen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_common_layout_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="支行：" />

                <TextView
                    android:id="@+id/tv_bankName"
                    style="@style/CustTvItemContent"
                    android:text="营业部" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.5"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="员工号：" />

                <TextView
                    android:id="@+id/tv_staffNo"
                    style="@style/CustTvItemContent"
                    android:text="1007" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="员工姓名：" />

                <TextView
                    android:id="@+id/tv_staffName"
                    style="@style/CustTvItemContent"
                    android:text="林东伟" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.5"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="工资：" />

                <TextView
                    android:id="@+id/tv_salary"
                    style="@style/CustTvItemContent"
                    android:text="2400.00" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="支行排行：" />

                <TextView
                    android:id="@+id/tv_subbranchRank"
                    style="@style/CustTvItemContent"
                    android:text="7" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.5"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="全行排行：" />

                <TextView
                    android:id="@+id/tv_headquartersRank"
                    style="@style/CustTvItemContent"
                    android:text="15" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>