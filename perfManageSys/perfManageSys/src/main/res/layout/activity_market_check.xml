<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RootFragment"
    android:orientation="vertical" >

    <include layout="@layout/layout_common_back_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/bg_white"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/MarketCheckLayout"
                android:background="@color/bg_white"
                android:orientation="horizontal" >

                <TextView
                    style="@style/MarketTvTitle"
                    android:text="预约编号：" />

                <TextView
                    android:id="@+id/market_check_tv_yuyuebianhao"
                    style="@style/MarketCheckTvContent"
                    />
            </LinearLayout>

            <View style="@style/CommonHorLine" />

            <LinearLayout
                style="@style/MarketCheckLayout"
                android:background="@color/bg_white"
                android:orientation="horizontal" >

                <TextView
                    style="@style/MarketTvTitle"
                    android:text="机构名称：" />

                <TextView
                    android:id="@+id/market_check_tv_jigoumingcheng"
                    style="@style/MarketCheckTvContent"/>
            </LinearLayout>

            <View style="@style/CommonHorLine" />

            <LinearLayout
                style="@style/MarketCheckLayout"
                android:background="@color/bg_white"
                android:orientation="horizontal" >

                <TextView
                    style="@style/MarketTvTitle"
                    android:text="客户名称：" />

                <TextView
                    android:id="@+id/market_check_tv_kehumingchen"
                    style="@style/MarketCheckTvContent"/>
            </LinearLayout>

            <View style="@style/CommonHorLine" />

            <LinearLayout
                android:id="@+id/market_ll_cun_dai_zhonglei"
                style="@style/MarketCheckLayout"
                android:background="@color/bg_white"
                android:orientation="horizontal"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/market_tv_cun_dai_zhonglei"
                    style="@style/MarketTvTitle"
                    android:text="贷款种类：" />

                <TextView
                    android:id="@+id/market_check_tv_cun_dai_zhonglei"
                    style="@style/MarketCheckTvContent" />
            </LinearLayout>

            <View
                android:id="@+id/market_view_cun_dai_zhonglei" 
                style="@style/CommonHorLine" />

            <LinearLayout
                android:id="@+id/market_ll_kehu_zhonglei"
                style="@style/MarketCheckLayout"
                android:background="@color/bg_white"
                android:orientation="horizontal"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/market_tv_kehu_zhonglei"
                    style="@style/MarketTvTitle"
                    android:text="客户种类：" />

                <TextView
                    android:id="@+id/market_check_tv_kehu_zhonglei"
                    style="@style/MarketCheckTvContent" />
            </LinearLayout>

            <View 
                android:id="@+id/market_view_kehu_zhonglei"
                style="@style/CommonHorLine" />


            <LinearLayout
                style="@style/MarketCheckLayout"
                android:background="@color/bg_white"
                android:orientation="horizontal" >

                <TextView
                    style="@style/MarketTvTitle"
                    android:text="证件号码：" />

                <TextView
                    android:id="@+id/market_check_tv_zhengjainhaoma"
                    style="@style/MarketCheckTvContent" />
            </LinearLayout>

            <View style="@style/CommonHorLine" />

            <LinearLayout
                style="@style/MarketCheckLayout"
                android:background="@color/bg_white"
                android:orientation="horizontal" >

                <TextView
                    style="@style/MarketTvTitle"
                    android:text="联系电话：" />

                <TextView
                    android:id="@+id/market_check_tv_lianxidianhua"
                    style="@style/MarketCheckTvContent" />
            </LinearLayout>

            <View style="@style/CommonHorLine" />

            <LinearLayout
                style="@style/MarketCheckLayout"
                android:background="@color/bg_white"
                android:orientation="horizontal" >

                <TextView
                    style="@style/MarketTvTitle"
                    android:text="预约日期：" />

                <TextView
                    android:id="@+id/market_check_tv_yuyueriqi"
                    style="@style/MarketCheckTvContent" />
            </LinearLayout>

            <View style="@style/CommonHorLine" />

            <LinearLayout
                style="@style/MarketCheckLayout"
                android:background="@color/bg_white"
                android:orientation="horizontal" >

                <TextView
                    style="@style/MarketTvTitle"
                    android:text="营销人工号：" />

                <TextView
                    android:id="@+id/market_check_tv_yingxiaorengonghao"
                    style="@style/MarketCheckTvContent" />
            </LinearLayout>

            <View style="@style/CommonHorLine" />

            <LinearLayout
                style="@style/MarketCheckLayout"
                android:background="@color/bg_white"
                android:orientation="horizontal" >

                <TextView
                    style="@style/MarketTvTitle"
                    android:text="营销比例：" />

                <TextView
                    android:id="@+id/market_check_tv_yingxiaobili"
                    style="@style/MarketCheckTvContent" />
            </LinearLayout>
            
            <View style="@style/CommonHorLine" />
            
            <LinearLayout
                android:id="@+id/market_ll_kehu_cunkuan_zhanghao"
                style="@style/MarketCheckLayout"
                android:background="@color/bg_white"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    style="@style/MarketTvTitle"
                    android:text="客户存款账号：" />

                <TextView
                    android:id="@+id/market_check_tv_kehu_cunkuan_zhanghao"
                    style="@style/MarketCheckTvContent" />
            </LinearLayout>
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>