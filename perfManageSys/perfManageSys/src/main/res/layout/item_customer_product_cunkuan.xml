
<!-- 存款产品信息 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:background="@color/bg_white"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/CustTvItemTitle"
            android:text="存款账号：" />

        <TextView
            android:id="@+id/customer_product_cunkuan_mingchen"
            style="@style/CustTvItemContent"
            android:text="对私活期" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/CustTvItemTitle"
            android:text="开户机构：" />

        <TextView
            android:id="@+id/customer_product_cunkuan_jigou"
            style="@style/CustTvItemContent"
            android:text="营业部" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal" >

            <TextView
                style="@style/CustTvItemTitle"
                android:text="利率：" />

            <TextView
                android:id="@+id/customer_product_cunkuan_lilv"
                style="@style/CustTvItemContent"
                android:text="0.455" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:orientation="horizontal" >

            <TextView
                style="@style/CustTvItemTitle"
                android:text="开户日期：" />

            <TextView
                android:id="@+id/customer_product_cunkuan_riqi"
                style="@style/CustTvItemContent"
                android:text="2017-05-20" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal" >

            <TextView
                style="@style/CustTvItemTitle"
                android:text="金额：" />

            <TextView
                android:id="@+id/customer_product_cunkuan_jine"
                style="@style/CustTvItemContent"
                android:text="14445.45" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:orientation="horizontal" >

            <TextView
                style="@style/CustTvItemTitle"
                android:text="营销类型：" />

            <TextView
                android:id="@+id/customer_product_cunkuan_leixing"
                style="@style/CustTvItemContent"
                android:text="自然增长" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal" >

            <TextView
                style="@style/CustTvItemTitle"
                android:text="拓展人：" />

            <TextView
                android:id="@+id/customer_product_cunkuan_tuozhanren"
                style="@style/CustTvItemContent"
                android:text="张三" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:orientation="horizontal" >

            <TextView
                style="@style/CustTvItemTitle"
                android:text="拓展比例（%）：" />

            <TextView
                android:id="@+id/customer_product_cunkuan_bili"
                style="@style/CustTvItemContent"
                android:text="100" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>