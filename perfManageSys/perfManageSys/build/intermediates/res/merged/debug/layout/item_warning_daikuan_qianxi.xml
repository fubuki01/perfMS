<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_root"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp" >

        <LinearLayout
            style="@style/RootFragment"
            android:background="@color/bg_white"
            android:orientation="vertical"
            android:padding="@dimen/padding_listview_item_hor" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/CustTvItemTitle"
                        android:text="业务机构：" />

                    <TextView
                        android:id="@+id/item_warning_dkqx_jigou"
                        style="@style/CustTvItemContent"
                        android:text="营业部" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/CustTvItemTitle"
                        android:text="客户名称：" />

                    <TextView
                        android:id="@+id/item_warning_dkqx_kehumc"
                        style="@style/CustTvItemContent"
                        android:text="张三" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/CustTvItemTitle"
                        android:text="起息日：" />

                    <TextView
                        android:id="@+id/item_warning_dkqx_qixiri"
                        style="@style/CustTvItemContent"
                        android:text="2017-05-11" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/CustTvItemTitle"
                        android:text="结息日：" />

                    <TextView
                        android:id="@+id/item_warning_dkqx_jiexiri"
                        style="@style/CustTvItemContent"
                        android:text="2017-07-01" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="欠息：" />

                <TextView
                    android:id="@+id/item_warning_dkqx_qianxi"
                    style="@style/CustTvItemContent"
                    android:text="10000" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/common_item_lable" />

</FrameLayout>