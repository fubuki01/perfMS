<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bg_root"
    android:paddingLeft="@dimen/listview_item_dimen"
    android:paddingRight="@dimen/listview_item_dimen"
    android:paddingTop="@dimen/listview_item_dimen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_common_layout_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="交接日期：" />

                <TextView
                    android:id="@+id/tv_date"
                    style="@style/CustTvItemContent"
                    android:text="2018-05-11" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.5"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="交接岗位：" />

                <TextView
                    android:id="@+id/tv_handover_position"
                    style="@style/CustTvItemContent"
                    android:text="代班会计" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="机构名称：" />

                <TextView
                    android:id="@+id/tv_organization_name"
                    style="@style/CustTvItemContent"
                    android:text="营业部" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.5"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="员工工号：" />

                <TextView
                    android:id="@+id/tv_staff_no"
                    style="@style/CustTvItemContent"
                    android:text="1001" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="员工姓名：" />

                <TextView
                    android:id="@+id/tv_staff_name"
                    style="@style/CustTvItemContent"
                    android:text="王五" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.5">
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>