<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/bg_white"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:minHeight="30dp">

    <TextView
        android:background="@color/bg_white"
        android:id="@+id/itme_family_member_name"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="测试成员"
        android:textColor="@color/font_black_2"
        android:layout_weight="2.5"/>

    <TextView
        android:background="@color/bg_white"
        android:id="@+id/itme_credentials_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="1234567890987654321"
        android:textColor="@color/font_black_2"
        android:layout_weight="4"/>

    <TextView
        android:background="@color/bg_white"
        android:id="@+id/itme_family_member_relationship"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="父母"
        android:textColor="@color/font_black_2"
        android:layout_weight="1.5"/>

    <TextView
        android:background="@drawable/selector_visit_button_bg"
        android:id="@+id/itme_family_member_delete"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:text="删除"
        android:textColor="@color/font_choose_save"
        android:layout_weight="2"/>
</LinearLayout>