<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_title_height"
    android:background="@color/bg_title" >

    <LinearLayout
        android:id="@+id/ll_common_visit"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:visibility="visible" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/ic_left" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_common_visit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/baifangkehu"
            android:textColor="@color/font_title"
            android:textSize="@dimen/font_title" />

        <TextView
            android:id="@+id/tv_common_visit_title_sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="（类型）"
            android:textColor="@color/font_title"
            android:textSize="@dimen/font_sec_menu"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:visibility="visible" >
        
        <TextView
            android:id="@+id/common_visit_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:textColor="@color/textcolor_top_back"
            android:textSize="@dimen/font_content_fir"
            android:text="拜访"
            android:visibility="gone" />
        
        <ImageView
            android:id="@+id/common_back_iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_search"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/common_visit_title_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_add"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>