<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog" >

    <TextView
        android:id="@+id/tv_sjd_id"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="是否删除"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/alarm_dialog_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tv_sjd_id"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/alarm_btn_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_dialog_button_left"
            android:gravity="center"
            android:text="取消"
            android:textColor="#0075ff"
            android:textSize="17sp" />

        <View
            android:layout_width="1.0px"
            android:layout_height="match_parent"
            android:background="#eeeeee" />

        <Button
            android:id="@+id/alarm_btn_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_dialog_button_right"
            android:gravity="center"
            android:text="确定"
            android:textColor="#0075ff"
            android:textSize="17sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_above="@id/alarm_dialog_btn_layout"
        android:background="#eeeeee" />

</RelativeLayout>