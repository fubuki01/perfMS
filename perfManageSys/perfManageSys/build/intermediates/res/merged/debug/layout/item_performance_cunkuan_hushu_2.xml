<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <!-- 第一行 -->

    <TextView
        android:id="@+id/business_institution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="业务机构：" />

    <TextView
        android:id="@+id/business_institution_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/business_institution"
        android:text="营业部" />

    <TextView
        android:id="@+id/customer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/due_date"
        android:layout_toRightOf="@+id/business_institution_1"
        android:text="客户名称：" />

    <TextView
        android:id="@+id/customer_name_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/customer_name"
        android:text="马小腾" />

    <!-- 第二行 -->

    <TextView
        android:id="@+id/open_account_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/business_institution"
        android:text="开户日期：" />

    <TextView
        android:id="@+id/open_account_date_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/business_institution"
        android:layout_toRightOf="@+id/open_account_date"
        android:text="2010-09-10" />

    <TextView
        android:id="@+id/due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/business_institution"
        android:layout_toLeftOf="@+id/due_date_1"
        android:text="到期日期：" />

    <TextView
        android:id="@+id/due_date_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/business_institution"
        android:text="2017-09-10" />

    <!-- 第三行 -->

    <TextView
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/open_account_date"
        android:text="利率：" />

    <TextView
        android:id="@+id/rate_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/open_account_date"
        android:layout_toRightOf="@+id/rate"
        android:text="2010-09-10" />

    <TextView
        android:id="@+id/deposite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/due_date"
        android:layout_below="@+id/open_account_date"
        android:layout_toRightOf="@+id/rate_1"
        android:text="存期：" />

    <TextView
        android:id="@+id/deposit_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/open_account_date"
        android:layout_toRightOf="@+id/deposite"
        android:text="2017-09-10" />

    <!-- 第四行 -->

    <TextView
        android:id="@+id/remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rate"
        android:text="余额：" />

    <TextView
        android:id="@+id/remaining_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rate"
        android:layout_toRightOf="@+id/remaining"
        android:text="1000元" />

</RelativeLayout>