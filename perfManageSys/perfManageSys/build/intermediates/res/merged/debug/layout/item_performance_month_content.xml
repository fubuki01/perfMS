<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/performance_month_tv_bumen_title"
        style="@style/PerformanceTitle"
        android:layout_alignParentLeft="true"
        android:paddingLeft="10dp"
        android:text="组织部门：" />

    <TextView
        android:id="@+id/performance_month_tv_bumen"
        style="@style/PerformanceContent"
        android:layout_toRightOf="@id/performance_month_tv_bumen_title"
        android:text="营业部" />

    <TextView
        android:id="@+id/performance_month_tv_gangwei"
        style="@style/PerformanceContent"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:text="客户经理" />

    <TextView
        android:id="@+id/performance_month_tv_gangwei_title"
        style="@style/PerformanceTitle"
        android:layout_toLeftOf="@id/performance_month_tv_gangwei"
        android:paddingLeft="0dp"
        android:text="岗位名称：" />

    <View
        android:id="@+id/performance_month_tv_bumen_line"
        style="@style/CommonHorLine"
        android:layout_below="@id/performance_month_tv_bumen_title" />

    <TextView
        android:id="@+id/performance_month_tv_heji_title"
        style="@style/PerformanceTitle2"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/performance_month_tv_bumen_line"
        android:paddingLeft="10dp"
        android:text="工资合计：" />

    <TextView
        android:id="@+id/performance_month_tv_heji"
        style="@style/PerformanceContent2"
        android:layout_below="@id/performance_month_tv_bumen_line"
        android:layout_toRightOf="@id/performance_month_tv_heji_title"
        android:text="20000元" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/performance_month_tv_heji_title"
        android:paddingLeft="30dp"
        android:paddingRight="30dp" >

        <TextView
            android:id="@+id/performance_month_tv_jiben_title"
            style="@style/PerformanceContent3"
            android:layout_alignParentLeft="true"
            android:text="基本绩效工资：" />

        <TextView
            android:id="@+id/performance_month_tv_jiben"
            style="@style/PerformanceContent3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/performance_month_tv_jiben_title"
            android:text="200元" />

        <TextView
            android:id="@+id/performance_month_tv_tiaozeng_title"
            style="@style/PerformanceContent3"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/performance_month_tv_jiben_title"
            android:text="调增工资：" />

        <TextView
            android:id="@+id/performance_month_tv_tiaozeng"
            style="@style/PerformanceContent3"
            android:layout_alignRight="@id/performance_month_tv_jiben"
            android:layout_below="@id/performance_month_tv_jiben_title"
            android:layout_toRightOf="@id/performance_month_tv_tiaozeng_title"
            android:text="120元" />

        <TextView
            android:id="@+id/performance_month_tv_koujian_title"
            style="@style/PerformanceContent3"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/performance_month_tv_tiaozeng_title"
            android:text="扣减工资：" />

        <TextView
            android:id="@+id/performance_month_tv_koujian"
            style="@style/PerformanceContent3"
            android:layout_alignRight="@id/performance_month_tv_jiben"
            android:layout_below="@id/performance_month_tv_tiaozeng_title"
            android:layout_toRightOf="@id/performance_month_tv_koujian_title"
            android:text="120元" />

        <View
            android:id="@+id/performance_month_tv_koujian_line"
            style="@style/CommonHorLine"
            android:layout_below="@id/performance_month_tv_koujian_title"
            android:layout_marginTop="3dp" />

        <RelativeLayout
            android:id="@+id/performance_month_rl_phjfk_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/performance_month_tv_koujian_line"
            android:background="@drawable/selector_common_layout" >

            <TextView
                android:id="@+id/performance_month_tv_phjfk_title"
                style="@style/PerformanceContent4"
                android:layout_alignParentLeft="true"
                android:text="平衡积分卡工资：" />

            <TextView
                android:id="@+id/performance_month_tv_phjfk"
                style="@style/PerformanceContent4"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/performance_month_tv_phjfk_title"
                android:text="500元" />

            <ImageView
                android:layout_width="@dimen/image_right_size"
                android:layout_height="@dimen/image_right_size"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_right" />
        </RelativeLayout>

        <View
            android:id="@+id/performance_month_tv_phjfk_line"
            style="@style/CommonHorLine"
            android:layout_below="@id/performance_month_rl_phjfk_title" />

        <RelativeLayout
            android:id="@+id/performance_month_rl_gxl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/performance_month_tv_phjfk_line"
            android:background="@drawable/selector_common_layout" >

            <TextView
                android:id="@+id/performance_month_tv_gxl_title"
                style="@style/PerformanceContent4"
                android:layout_alignParentLeft="true"
                android:text="贡献率工资：" />

            <TextView
                android:id="@+id/performance_month_tv_gxl"
                style="@style/PerformanceContent4"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/performance_month_tv_gxl_title"
                android:text="160元" />

            <ImageView
                android:layout_width="@dimen/image_right_size"
                android:layout_height="@dimen/image_right_size"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_right" />
        </RelativeLayout>

        <View
            android:id="@+id/performance_month_tv_gxl_line"
            style="@style/CommonHorLine"
            android:layout_below="@id/performance_month_rl_gxl_title" />

        <RelativeLayout
            android:id="@+id/performance_month_rl_aljc_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/performance_month_tv_gxl_line"
            android:background="@drawable/selector_common_layout" >

            <TextView
                android:id="@+id/performance_month_tv_aljc_title"
                style="@style/PerformanceContent4"
                android:layout_alignParentLeft="true"
                android:text="按量计酬工资：" />

            <TextView
                android:id="@+id/performance_month_tv_aljc"
                style="@style/PerformanceContent4"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/performance_month_tv_aljc_title"
                android:text="290元" />

            <ImageView
                android:layout_width="@dimen/image_right_size"
                android:layout_height="@dimen/image_right_size"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_right" />
        </RelativeLayout>
    </RelativeLayout>

