<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_root"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp" >

    <LinearLayout
        style="@style/RootFragment"
        android:background="@drawable/selector_home_tips"
        android:orientation="vertical"
        android:padding="@dimen/padding_listview_item_hor" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="业务机构：" />

                <TextView
                    android:id="@+id/item_warning_dingqi_jigou"
                    style="@style/CustTvItemContent"
                    android:text="营业部" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="客户名称：" />

                <TextView
                    android:id="@+id/item_warning_dingqi_kehumc"
                    style="@style/CustTvItemContent"
                    android:text="张三" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="存期：" />

                <TextView
                    android:id="@+id/item_warning_dingqi_cunqi"
                    style="@style/CustTvItemContent"
                    android:text="365" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="开户日期：" />

                <TextView
                    android:id="@+id/item_warning_dingqi_kaihu"
                    style="@style/CustTvItemContent"
                    android:text="2017-05-11" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="余额：" />

                <TextView
                    android:id="@+id/item_warning_dingqi_yue"
                    style="@style/CustTvItemContent"
                    android:text="10000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="到期日期：" />

                <TextView
                    android:id="@+id/item_warning_dingqi_daoqi"
                    style="@style/CustTvItemContent"
                    android:text="2017-07-01" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/CustTvItemTitle"
                android:text="利率(%)：" />

            <TextView
                android:id="@+id/item_warning_dingqi_lilv"
                style="@style/CustTvItemContent"
                android:text="3.2" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>