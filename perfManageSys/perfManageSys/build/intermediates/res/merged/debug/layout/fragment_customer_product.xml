<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RootFragment"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/customer_product_tv_cunkuan"
            style="@style/PerfTvMenu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="存款"
            android:textSize="@dimen/font_th_menu" />

        <TextView
            android:id="@+id/customer_product_tv_daikuan"
            style="@style/PerfTvMenu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="贷款"
            android:textSize="@dimen/font_th_menu" />

        <TextView
            android:id="@+id/customer_product_tv_shouji"
            style="@style/PerfTvMenu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="手机银行"
            android:textSize="@dimen/font_th_menu" />

        <TextView
            android:id="@+id/customer_product_tv_etc"
            style="@style/PerfTvMenu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="ETC"
            android:textSize="@dimen/font_th_menu" />
    </LinearLayout>

    <View style="@style/CommonHorLine" />

    <android.support.v4.view.ViewPager
        android:id="@+id/customer_product_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1" />

</LinearLayout>