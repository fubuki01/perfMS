<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/CommonLayout"
        android:gravity="center_vertical"
        android:background="@color/bg_white"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/lines_top_bottom_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/lines_left_right_margin"
            android:text="成员名称："
            android:textColor="@color/font_black_1"/>
        <EditText
            android:id="@+id/et_member_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入成员名称"
            android:textSize="@dimen/font_content_sec"
            android:textColorHint="@color/font_black_3"
            android:textColor="@color/font_black_1"/>
    </LinearLayout>

    <LinearLayout
        style="@style/CommonLayout"
        android:id="@+id/bar_credentials_type"
        android:gravity="center_vertical"
        android:background="@color/bg_white"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lines_left_right_margin"
                android:text="证件类型："
                android:textColor="@color/font_black_1"/>

            <TextView
                android:id="@+id/tv_credentials_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证"
                android:textColor="@color/font_black_1"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/bt_credentials_arrow"
                android:background="@color/bg_white"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/lines_left_right_margin"
                android:src="@drawable/ic_arrow"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/CommonLayout"
        android:gravity="center_vertical"
        android:background="@color/bg_white"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/lines_left_right_margin"
            android:text="证件号码："
            android:textColor="@color/font_black_1"/>
        <EditText
            android:id="@+id/et_credentials_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入证件号码"
            android:textSize="@dimen/font_content_sec"
            android:textColorHint="@color/font_black_3"
            android:textColor="@color/font_black_1"/>
    </LinearLayout>

    <LinearLayout
        style="@style/CommonLayout"
        android:id="@+id/bar_relationship_type"
        android:gravity="center_vertical"
        android:background="@color/bg_white"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lines_left_right_margin"
                android:text="成员关系："
                android:textColor="@color/font_black_1"/>

            <TextView
                android:id="@+id/tv_relationship_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_black_1"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/bt_relationship_arrow"
                android:background="@color/bg_white"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/lines_left_right_margin"
                android:src="@drawable/ic_arrow"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/VisitTextLine"
        android:text="家庭成员组成列表："/>

    <ListView
        android:id="@+id/lv_family_member_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="@dimen/lines_top_bottom_margin"/>

    <!--</ScrollView>-->

</LinearLayout>