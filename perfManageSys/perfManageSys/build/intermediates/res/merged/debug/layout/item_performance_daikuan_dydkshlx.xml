        <TextView
            android:id="@+id/item_performance_dk_dydklx_dj"
            style="@style/ItemTvContent"
            android:layout_below="@id/item_performance_dk_dydklx_shlx_title"
            android:layout_toRightOf="@+id/item_performance_dk_dydklx_dj_title"
            android:text="201" />

        <!-- 第五行 -->

        <TextView
            android:id="@+id/item_performance_dk_dydklx_gz_title"
            style="@style/ItemTvTitle"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/item_performance_dk_dydklx_shje_title"
            android:text="工资：" />

        <TextView
            android:id="@+id/item_performance_dk_dydklx_gz"
            style="@style/ItemTvContent"
            android:layout_below="@id/item_performance_dk_dydklx_shje_title"
            android:layout_toRightOf="@+id/item_performance_dk_dydklx_gz_title"
            android:text="10000" />
    </RelativeLayout>

    <include layout="@layout/common_item_lable" />

</FrameLayout>