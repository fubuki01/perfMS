<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RootLayout"
    android:orientation="vertical">

    <include layout="@layout/layout_common_salary_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_common_layout_white">

        <LinearLayout
            android:layout_weight="100"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="工资日期："
                android:textSize="@dimen/font_content_four"
                android:gravity="center_vertical|right"
                android:textColor="@color/font_black_1"/>
            <TextView
                android:layout_weight="5"
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="2018-03-01"
                android:textSize="@dimen/font_content_four"
                android:gravity="center"
                android:textColor="@color/font_black_1"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_bottom"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/bg_root"/>

        <LinearLayout
            android:layout_weight="100"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_common_layout_white">
            <TextView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="支行名称："
                android:textSize="@dimen/font_content_four"
                android:gravity="center_vertical|right"
                android:textColor="@color/font_black_1"/>
            <TextView
                android:layout_weight="5"
                android:id="@+id/tv_bankname"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text=""
                android:textSize="@dimen/font_content_four"
                android:gravity="center"
                android:textColor="@color/font_black_1"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_bottom"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_root"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_root">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ListView
                android:id="@+id/lv_staff_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_root"
                android:divider="@color/bg_root"
                android:dividerHeight="@dimen/line_height"
                android:scrollbarSize="4dp"
                android:scrollbarThumbVertical="@drawable/listview_scrollbar_style"
                android:scrollbars="vertical">
            </ListView>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>

