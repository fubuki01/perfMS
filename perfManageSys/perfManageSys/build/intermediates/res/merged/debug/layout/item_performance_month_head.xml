<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/bg_white"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="@color/bg_white"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/performance_month_tv_rank"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:text="0"
            android:textColor="@color/font_black_1"
            android:textSize="@dimen/font_content_big" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top|center_horizontal"
            android:paddingTop="6dp"
            android:text="当月绩效全行排名"
            android:textColor="@color/font_black_1"
            android:textSize="@dimen/font_content_fir" />
    </LinearLayout>
    
    
    <View 
        style="@style/CommonVerLine"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="@color/bg_white"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/performance_month_tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/font_them"
                android:textSize="@dimen/font_content_big" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="元"
                android:textColor="@color/font_them"
                android:textSize="@dimen/font_content_th" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top|center_horizontal"
            android:paddingTop="6dp"
            android:text="当月绩效工资合计"
            android:textColor="@color/font_black_1"
            android:textSize="@dimen/font_content_fir" />
    </LinearLayout>

</LinearLayout>