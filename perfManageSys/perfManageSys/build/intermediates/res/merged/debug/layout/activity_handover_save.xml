<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RootLayout"
    android:orientation="vertical">

    <include
        android:id="@+id/include"
        layout="@layout/layout_common_teller_handover_title" />

    <LinearLayout
        android:id="@+id/l1"
        android:layout_below="@+id/include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_common_layout_white">

        <LinearLayout
            android:layout_weight="100"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="交接日期："
                android:textSize="@dimen/font_content_four"
                android:gravity="center_vertical|right"
                android:textColor="@color/font_black_1"/>
            <TextView
                android:layout_weight="5"
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="2018-03-01"
                android:textSize="@dimen/font_content_four"
                android:gravity="center"
                android:textColor="@color/font_black_1"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_bottom"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/bg_root"/>

        <LinearLayout
            android:layout_weight="100"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_common_layout_white">
            <TextView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="支行名称："
                android:textSize="@dimen/font_content_four"
                android:gravity="center_vertical|right"
                android:textColor="@color/font_black_1"/>
            <TextView
                android:layout_weight="6"
                android:id="@+id/tv_bankname"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="数据装载中。。。"
                android:textSize="@dimen/font_content_four"
                android:gravity="center"
                android:textColor="@color/font_black_1"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/line1"
        android:layout_below="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_root"/>

    <LinearLayout
        android:id="@+id/l2"
        android:layout_below="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_common_layout_white">

        <LinearLayout
            android:layout_weight="100"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="员工工号："
                android:textSize="@dimen/font_content_four"
                android:gravity="center_vertical|right"
                android:textColor="@color/font_black_1"/>
            <TextView
                android:layout_weight="6"
                android:id="@+id/tv_staffNo"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:maxLines="1"
                android:gravity="center_vertical|center"
                android:textSize="@dimen/font_content_four"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:textColor="@color/font_black_1"/>
        </LinearLayout>

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/bg_root"/>

        <LinearLayout
            android:layout_weight="100"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_common_layout_white">
            <TextView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="员工姓名："
                android:textSize="@dimen/font_content_four"
                android:gravity="center_vertical|right"
                android:textColor="@color/font_black_1"/>
            <TextView
                android:layout_weight="6"
                android:id="@+id/tv_staffName"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:maxLines="1"
                android:gravity="center_vertical|center"
                android:textSize="@dimen/font_content_four"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:textColor="@color/font_black_1"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/line2"
        android:layout_below="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_root"/>

    <LinearLayout
        android:id="@+id/l3"
        android:layout_below="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_common_layout_white">
        <LinearLayout
            android:layout_weight="100"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textSize="@dimen/font_content_four"
                android:gravity="center"
                android:textColor="@color/font_black_1"/>
            <TextView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="交接岗位："
                android:textSize="@dimen/font_content_four"
                android:gravity="center_vertical|right"
                android:textColor="@color/font_black_1"/>
            <TextView
                android:layout_weight="5"
                android:id="@+id/tv_position"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text=""
                android:textSize="@dimen/font_content_four"
                android:gravity="center"
                android:textColor="@color/font_black_1"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_bottom"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textSize="@dimen/font_content_four"
                android:gravity="center"
                android:textColor="@color/font_black_1"/>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/btn_save"
        android:background="@drawable/selector_common_layout_white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="@dimen/font_content_big"
        android:text="保存"
        android:gravity="center"
        android:textColor="@color/font_black_1"/>

</RelativeLayout>

