<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_root"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp" >

        <LinearLayout
            style="@style/RootFragment"
            android:background="@drawable/selector_home_tips"
            android:orientation="vertical"
            android:padding="@dimen/padding_listview_item_hor" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="湘通卡卡号：" />

                <TextView
                    android:id="@+id/item_performance_dianzi_etc_xtkkh"
                    style="@style/CustTvItemContent"
                    android:text="12232232332" />
            </LinearLayout>

            <View style="@style/CommonHorLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/CustTvItemTitle"
                        android:text="客户名称：" />

                    <TextView
                        android:id="@+id/item_performance_dianzi_etc_khmc"
                        style="@style/CustTvItemContent"
                        android:text="张三" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/CustTvItemTitle"
                        android:text="绑定日期：" />

                    <TextView
                        android:id="@+id/item_performance_dianzi_etc_bdrq"
                        style="@style/CustTvItemContent"
                        android:text="2017-05-11" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/CustTvItemTitle"
                        android:text="垫付金额：" />

                    <TextView
                        android:id="@+id/item_performance_dianzi_etc_dfje"
                        style="@style/CustTvItemContent"
                        android:text="122" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/CustTvItemTitle"
                        android:text="单价：" />

                    <TextView
                        android:id="@+id/item_performance_dianzi_etc_dj"
                        style="@style/CustTvItemContent"
                        android:text="10" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="工资：" />

                <TextView
                    android:id="@+id/item_performance_dianzi_etc_gz"
                    style="@style/CustTvItemContent"
                    android:text="122" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include 
       layout="@layout/common_item_lable"/>

</FrameLayout>