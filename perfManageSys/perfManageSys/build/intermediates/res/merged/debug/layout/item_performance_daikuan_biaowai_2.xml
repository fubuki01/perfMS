<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_root"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <LinearLayout
        style="@style/RootFragment"
        android:background="@drawable/selector_home_tips"
        android:orientation="vertical"
        android:padding="@dimen/padding_listview_item_hor" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="贷款账号：" />

                <TextView
                    android:id="@+id/item_performance_dk_bw_dkzh"
                    style="@style/CustTvItemContent"
                    android:text="430123199009099809" />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/CommonHorLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="客户名称：" />

                <TextView
                    android:id="@+id/item_performance_dk_bw_khmc"
                    style="@style/CustTvItemContent"
                    android:text="自然增长" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="清收机构：" />

                <TextView
                    android:id="@+id/item_performance_dk_bw_qsjg"
                    style="@style/CustTvItemContent"
                    android:text="营业部" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="收回类型：" />

                <TextView
                    android:id="@+id/item_performance_dk_bw_shlx"
                    style="@style/CustTvItemContent"
                    android:text="20" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="收回日期：" />

                <TextView
                    android:id="@+id/item_performance_dk_bw_shrq"
                    style="@style/CustTvItemContent"
                    android:text="2017-05-11" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="收回金额：" />

                <TextView
                    android:id="@+id/item_performance_dk_bw_shje"
                    style="@style/CustTvItemContent"
                    android:text="10000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="horizontal" >

                <TextView
                    style="@style/CustTvItemTitle"
                    android:text="单价：" />

                <TextView
                    android:id="@+id/item_performance_dk_bw_dj"
                    style="@style/CustTvItemContent"
                    android:text="201" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/CustTvItemTitle"
                android:text="工资：" />

            <TextView
                android:id="@+id/item_performance_dk_bw_gz"
                style="@style/CustTvItemContent"
                android:text="1000" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>