 <!-- 贷款产品信息 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:background="@color/bg_white"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/CustTvItemTitle"
            android:text="产品名称：" />

        <TextView
            android:id="@+id/customer_product_daikuan_mingchen"
            style="@style/CustTvItemContent"
            android:text="福祥便民卡业务" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/CustTvItemTitle"
            android:text="开户机构：" />

        <TextView
            android:id="@+id/customer_product_daikuan_jigou"
            style="@style/CustTvItemContent"
            android:text="营业部" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal" >

            <TextView
                style="@style/CustTvItemTitle"
                android:text="五级分类：" />

            <TextView
                android:id="@+id/customer_product_daikuan_wuji"
                style="@style/CustTvItemContent"
                android:text="正常" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:orientation="horizontal" >

            <TextView
                style="@style/CustTvItemTitle"
                android:text="发放日期：" />

            <TextView
                android:id="@+id/customer_product_daikuan_riqi"
                style="@style/CustTvItemContent"
                android:text="2017-05-20" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal" >

            <TextView
                style="@style/CustTvItemTitle"
                android:text="贷款余额：" />

            <TextView
                android:id="@+id/customer_product_daikuan_yue"
                style="@style/CustTvItemContent"
                android:text="455" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:orientation="horizontal" >

            <TextView
                style="@style/CustTvItemTitle"
                android:text="到期日期：" />

            <TextView
                android:id="@+id/customer_product_daikuan_daoqi_riqi"
                style="@style/CustTvItemContent"
                android:text="2018-05-20" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal" >

            <TextView
                style="@style/CustTvItemTitle"
                android:text="利率：" />

            <TextView
                android:id="@+id/customer_product_daikuan_lilv"
                style="@style/CustTvItemContent"
                android:text="10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:orientation="horizontal" >

            <TextView
                style="@style/CustTvItemTitle"
                android:text="客户经理：" />

            <TextView
                android:id="@+id/customer_product_daikuan_jingli"
                style="@style/CustTvItemContent"
                android:text="马小云" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal" >

            <TextView
                style="@style/CustTvItemTitle"
                android:text="贷款金额：" />

            <TextView
                android:id="@+id/customer_product_daikuan_jine"
                style="@style/CustTvItemContent"
                android:text="124555.0" />
        </LinearLayout>

        <!--  -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                style="@style/CustTvItemTitle"
                android:text="营销类型：" />

            <TextView
                android:id="@+id/customer_product_daikuan_leixing"
                style="@style/CustTvItemContent"
                android:text="自然增长" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>