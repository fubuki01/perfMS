<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_title_height"
        android:background="@color/bg_title"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_search_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:visibility="visible" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ic_left" />
        </LinearLayout>

        <com.hnran.perfmanagesys.view.ImageDeleteEditText
            android:id="@+id/search_et_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="搜索"
            android:background="@null"
            android:textCursorDrawable="@drawable/color_search_cursor"
            android:textColor="@color/font_title"
            android:textSize="@dimen/font_sec_menu"
            android:singleLine="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/search_iv"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_search"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33000000"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>